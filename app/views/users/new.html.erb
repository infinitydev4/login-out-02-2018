<center>
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Créer un profil</h1>
  </div>
  <%= form_for @post,url: {action: "create"}, html: {class: "form-signin w-25"} do |f| %>
    Name :
    <%= f.text_field :name, class: "form-control", placeholder: "MyName" %>
    <br /> <br />
    Email :
    <%= f.email_field :email, class: "form-control", placeholder: "something@heyah.com" %>
    <br /> <br />
    Password :
    <%= f.text_field :password, class: "form-control", placeholder: "Mypass" %>
    <br /> <br />
    Confirme le password :
    <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Confirmer" %>
    <br /> <br />
    <%= f.submit "Créer", class: "btn btn-lg btn-primary btn-block" %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% end %>
</center>
